@using EntityLayer;
@model Employee;
@{
    ViewData["Title"] = "Update";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Update</title>
    <!-- Table and Search Bar Css Import-->
    <link href="~/css/Table-SearchBar.css" rel="stylesheet" />
    <!-- Bootstrap Css Import-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="content-wrapper">
        <div class="card">
            <div class="card-header">
                <h2>Employee Update</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Update", "Employee", FormMethod.Post, new { @class = "form-group" }))
                {
                    @Html.TextBoxFor(employe=>employe.EmployeeId,new { @class = "form-control",@name="EmployeeId",@value="@Model.UserId",@type="hidden"})
                    @Html.Label("First Name")
                    @Html.TextBoxFor(employe=>employe.FirstName,new { @class = "form-control"})
                    @Html.ValidationMessageFor(employe=>employe.FirstName,"",new{@class="text-danger"})
                    <br />
                    @Html.Label("Last Name")
                    @Html.TextBoxFor(employe=>employe.LastName,new { @class = "form-control"})
                    @Html.ValidationMessageFor(employe=>employe.LastName,"",new{@class="text-danger"})
                    <br />
                    @Html.Label("Age")
                    @Html.TextBoxFor(employe=>employe.Age,new { @class = "form-control"})
                    @Html.ValidationMessageFor(employe=>employe.Age,"",new{@class="text-danger"})
                    <br />
                    @Html.Label("City")
                    @Html.TextBoxFor(employe=>employe.City,new { @class = "form-control"})
                    @Html.ValidationMessageFor(employe=>employe.City,"",new{@class="text-danger"})
                    <br />
                    @Html.Label("Wage")
                    @Html.TextBoxFor(employe=>employe.Wage,new { @class = "form-control"})
                    @Html.ValidationMessageFor(employe=>employe.Wage,"",new{@class="text-danger"})
                    <br />
                    @Html.Label("Gender")
                    <select class="form-control" name="Gender">
                        <option value="True">Erkek</option>
                        <option value="False">Kadın</option>
                    </select>
                    <br />
                    @Html.Label("IsActive")
                    <select class="form-control" name="IsActive">
                        @if (Model.IsActive)
                        {
                            <option value="True" selected>Aktif</option>
                            <option value="False">Pasif</option>
                        }
                        else
                        {
                            <option value="False" selected>Pasif</option>
                            <option value="True">Aktif</option>
                        }
                    </select>
                    <br />
                    <input class="form-control btn btn-primary" type="submit" value="Employee Update" />
                }
            </div>
        </div>
    </div>
    <!-- Custom icon scripts -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>

